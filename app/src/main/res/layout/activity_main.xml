<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fon2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textgrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BO'LIMLAR"
            android:textColor="@android:color/white"
            android:textSize="34dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">



        <android.support.v7.widget.CardView
            android:id="@+id/bolimlar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"

            >
            <LinearLayout
                android:id="@+id/linerbolim"
                android:weightSum="10"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/sections"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bo'limlar bo'limi"
                    android:textColor="@color/fon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--Column 2-->
        <android.support.v7.widget.CardView
            android:id="@+id/balchiq"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:id="@+id/linergallery"
                android:weightSum="10"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/gallerynew"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galareya bo'limi"
                    android:textColor="@color/fon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--Column 3-->
        <android.support.v7.widget.CardView
            android:id="@+id/omillar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:id="@+id/linerfoydalanuvchi"
                android:weightSum="10"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/foydalanuvchi"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foydalanuvchi bo'limi"
                    android:textColor="@color/fon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--Column 4-->
        <android.support.v7.widget.CardView
            android:id="@+id/tasir"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:id="@+id/linerariza"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <ImageView
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/ariza"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Arizalalar bo'limi"
                    android:textColor="@color/fon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--Column 5-->
        <android.support.v7.widget.CardView
            android:id="@+id/rejim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:id="@+id/lineryangilik"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <ImageView
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/yangilik"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yangiliklar bo'limi"
                    android:textColor="@color/fon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--Column 6-->
        <android.support.v7.widget.CardView
            android:id="@+id/vanna"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:id="@+id/lineradmin"
                android:weightSum="10"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/admin"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adminlar bo'limi"
                    android:textColor="@color/fon"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>



    </GridLayout>



</LinearLayout>